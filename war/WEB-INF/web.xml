<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/spring/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>com.gxtDemo.GxtDemo GxtDemoService</servlet-name>
        <servlet-class>com.gxtDemo.server.GxtDemoServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.gxtDemo.GxtDemo GxtDemoService</servlet-name>
        <url-pattern>/GxtDemo/GxtDemoService</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>GxtDemo.html</welcome-file>
    </welcome-file-list>
</web-app>