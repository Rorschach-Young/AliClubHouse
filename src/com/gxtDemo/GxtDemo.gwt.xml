<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN"
        "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module rename-to="GxtDemo">

    <!-- Inherit the core Web Toolkit stuff.                  -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name="com.sencha.gxt.core.Core"/>

    <!-- Specify the app entry point class.                   -->
    <entry-point class='com.gxtDemo.client.GxtDemo'/>
    <inherits name="com.sencha.gxt.theme.triton.Theme"/>


    <!-- Specify the app servlets.                   -->
    <servlet path='/GxtDemoService' class='com.gxtDemo.server.GxtDemoServiceImpl'/>
    <inherits name="com.sencha.gxt.ui.GXT"/>

    <!-- GXT Stylesheet -->
    <stylesheet src="reset.css"/>

    <!-- Specify the paths for translatable code -->
    <source path="client"/>
    <source path="shared"/>
</module>